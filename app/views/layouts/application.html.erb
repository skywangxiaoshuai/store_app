<!DOCTYPE html>
<html>
  <head>
    <title>StoreApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- *** TOPBAR ***
 _________________________________________________________ -->
    <div id="top">
      <div class="container">
        <div class="col-md-6 offer" data-animate="fadeInDown">
          <a href="#" class="btn btn-success btn-sm" data-animate-hover="shake">只限今日</a>
          <a href="#">满200减50！</a>
        </div>
        <div class="col-md-6" data-animate="fadeInDown">
          <ul class="menu">
            <% if logged_in? %>
            <li><%= link_to '欢迎', "#" %></li>
            <li><%= link_to "#{current_user.name}", "#" %></li>
            <li><%= link_to '退出', logout_path, method: "delete" %></li>

            <li><%= link_to '浏览记录', "#" %></li>
          <% else %>
            <li><%= link_to '登录', login_path %></li>
            <li><%= link_to '注册', signup_path %></li>
            <li><%= link_to '联系', "#" %></li>
            <li><%= link_to '浏览记录', "#" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <!-- *** TOP BAR END *** -->

    <!-- *** NAVBAR ***
 _________________________________________________________ -->

    <div class="navbar navbar-default yamm" role="navigation" id="navbar">
      <div class="container">
        <div class="navbar-header">

          <a class="navbar-brand home" href="#" data-animate-hover="bounce">
            <img src="/assets/logo.png" alt="Obaju logo" class="hidden-xs">
            <img src="/assets/logo-small.png" alt="Obaju logo" class="visible-xs">
            <span class="sr-only">Obaju - go to homepage</span>
          </a>
          <div class="navbar-buttons">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation">
              <span class="sr-only">Toggle navigation</span>
              <i class="fa fa-align-justify"></i>
            </button>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#search">
              <span class="sr-only">Toggle search</span>
              <i class="fa fa-search"></i>
            </button>

            <a class="btn btn-default navbar-toggle" href="basket.html">
              <i class="fa fa-shopping-cart"></i>
              <span class="hidden-xs">3 items in cart</span>
            </a>
          </div>
        </div>
        <!--/.navbar-header -->

        <div class="navbar-collapse collapse" id="navigation">

          <ul class="nav navbar-nav navbar-left">
            <li class="active">
              <%= link_to '首页', root_url %>
            </li>
            <li class="dropdown yamm-fw">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="200">男士
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <div class="yamm-content">
                    <div class="row">
                      <div class="col-sm-3">
                        <h5><%= link_to '男装', man_clothing_products_path %></h5>
                        <ul>
                          <li><%= link_to '短袖', man_shirt_products_path %></li>
                          <li>
                            <%= link_to '休闲裤', man_pants_products_path %></li>
                        </ul>
                      </div>
                      <div class="col-sm-3">
                        <h5><%= link_to '男鞋', man_shoes_products_path %></h5>
                        <ul>
                          <li><%= link_to '登山鞋', man_hiking_products_path %></li>
                          <li>
                            <%= link_to '休闲鞋', man_casual_products_path %>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  <!-- /.yamm-content -->
                </li>
              </ul>
            </li>

            <li class="dropdown yamm-fw">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="200">女士
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <div class="yamm-content">
                    <div class="row">
                      <div class="col-sm-3">
                        <h5><%= link_to '女装', women_clothing_products_path %></h5>
                        <ul>
                          <li><%= link_to '短袖', women_shirt_products_path %></li>
                          <li>
                            <%= link_to '休闲裤', women_pants_products_path %></li>
                        </ul>
                      </div>
                      <div class="col-sm-3">
                        <h5><%= link_to '女鞋', women_shoes_products_path %></h5>
                        <ul>
                          <li><%= link_to '登山鞋', women_hiking_products_path %></li>
                          <li>
                            <%= link_to '休闲鞋', women_casual_products_path %>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  <!-- /.yamm-content -->
                </li>
              </ul>
            </li>
          </ul>
        </div>
        <!--/.nav-collapse -->

        <div class="navbar-buttons">

          <div class="navbar-collapse collapse right" id="basket-overview">
            <a href="basket.html" class="btn btn-primary navbar-btn">
              <i class="fa fa-shopping-cart"></i>
              <span class="hidden-sm">购物车</span>
            </a>
          </div>
          <!--/.nav-collapse -->

          <div class="navbar-collapse collapse right" id="search-not-mobile">
            <button type="button" class="btn navbar-btn btn-primary" data-toggle="collapse" data-target="#search">
              <span class="sr-only">搜索</span>
              <i class="fa fa-search"></i>
              <span class="hidden-sm">搜索</span>
            </button>
          </div>

        </div>

        <div class="collapse clearfix" id="search">

          <form class="navbar-form" role="search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search">
              <span class="input-group-btn">

                <button type="submit" class="btn btn-primary">
                  <i class="fa fa-search"></i>
                  <span class="hidden-sm">搜索</span>
                </button>

              </span>
            </div>
          </form>

        </div>
        <!--/.nav-collapse -->

      </div>
      <!-- /.container -->
    </div>
    <!-- /#navbar -->

    <!-- *** NAVBAR END *** -->

    <div id="all">
      <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
      <!-- /#content -->

      <div id="copyright">
        <div class="container">
          <div class="col-md-6">
            <p class="pull-left">by @Auther
            </p>

          </div>
          <div class="col-md-6">
            <p class="pull-right">您想要的我们必将全力以赴！</p>
          </div>
        </div>
      </div>
      <!-- *** COPYRIGHT END *** -->
      <%= debug(params) if Rails.env.development? %>
    </div>
    <!-- /#all -->

  </body>
</html>
