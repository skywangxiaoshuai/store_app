<div id="all">

  <div id="content">
    <div class="container">

      <div class="col-md-12">

        <ul class="breadcrumb">
          <li>
            <%= link_to "首页", root_url %>
          </li>
          <li>注册</li>
        </ul>

      </div>

      <div class="col-md-6">
        <div class="box">
          <div class="center">
            <h3>创建新账户</h3>
          </div>
          <hr>
          <%= form_for(@user) do |f| %>
          <%= f.label :name, "用户名" %>
          <%= f.text_field :name, class: "form-group form-control" %>
          <%= f.label :email, "邮箱" %>
          <%= f.email_field :email, class: "form-group form-control" %>
          <%= f.label :password, "密码" %>
          <%= f.password_field :password, class: "form-group form-control" %>
          <%= f.label :password_confirmation, "确认密码" %>
          <%= f.password_field :password_confirmation, class: "form-group form-control" %>
          <div class="center">
            <%= f.submit "创建账号", class: "text-center btn btn-primary fa fa-user-md" %>
          </div>
          <% end %>
          <hr>
          <h4>已有账户?
            <%= link_to "立即登录!", login_path %></h4>
        </div>
      </div>
    </div>
    <!-- /.container -->
  </div>
  <!-- /#content -->
